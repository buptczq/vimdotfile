        elseif count(g:spf13_bundle_groups, 'completor')
            Plug 'maralla/completor.vim'
            Plug 'maralla/completor-neosnippet'
            Plug 'Shougo/neosnippet'
            Plug 'Shougo/neosnippet-snippets'
            Plug 'honza/vim-snippets'
        endif
    " }

    " PHP {
